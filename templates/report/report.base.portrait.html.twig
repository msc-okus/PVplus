<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="{{ absolute_url(asset('css/monthly_report.css')) }}" rel="stylesheet" type="text/css">
    <link href="{{ absolute_url(asset('css/monthly_report.portrait.css')) }}" rel="stylesheet" type="text/css">
    <script src="{{ absolute_url(asset('echarts/dist/echarts.min.js')) }}" type="text/javascript"></script>
    <title>Monthly Report</title>
</head>
<body>
<div class="report">
    <div style="page-break-after: always; ">
        <div style="height: 13mm!important; width:100%!important; overflow: hidden">
            <table style="width: 100%; ">
                <tr style="border-bottom: solid 2px {{ anlage.eigner.fontColor2 }};">
                    <td style=" width: 254mm; text-align: left;" class=""><h1>{{ anlage.projektNr }} {{ anlage.anlName }}</h1></td>
                    <td><img alt="Cutomer Logo" class="customer_logo" src="{{ absolute_url(asset(anlage.eigner.getCustomerLogo)) }}"></td>

                </tr>
            </table>
        </div>
        <div class="content">
            {% block content %}

            {% endblock %}
        </div>
        <div style="position: relative; height: 10mm!important; margin-top: 1mm; width:100%!important; overflow: hidden">
            <table style="width: 100%; ">
                <tr style="border-top: solid 2px #91bc5b;">
                    <td style="width: 254mm; text-align: left;" class=""></td>
                    <td><img alt="green4net" class="g4n_logo" src="{{ absolute_url(asset('images/green4net.jpg')) }}"></td>
                </tr>
            </table>
        </div>
    </div>
</div>

</body>
</html>