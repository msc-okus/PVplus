{% extends 'report/_asset_mangement_partials/_pageBase.html.twig' %}

{% block page %}
    <h3 style="color: {{ anlage.eigner.fontColor2 }};">Cumulative Forecast</h3>
    <span class="subheadline">Yearly planned simulation values vs. Actuals</span>
    {# what is this for? marked to remove #}
    {% for data in table_overview_monthly.powerEvu %}
    {% endfor %}
    <table >
        <tr>
            <td colspan="2" style="text-align: left">
                <table class="asset_report_table_operations_data" style="width: 95%!important;">
                    <thead>
                    <tr>
                        <th rowspan="2" style="text-align: right">Cumulative Forecast - {{ year }}</th>
                        {% for data in dataMonthArrayFullYear %}
                            <th style="text-align: center"><div style="width: 100%; height: 50%;">{{ data }}</div></th>
                        {% endfor %}
                    </tr>
                    <tr>
                        {% for data in dataMonthArrayFullYear %}
                            <th style="text-align: center"><div style="width: 100%; height: 50%;">[kWh]</div></th>
                        {% endfor %}
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="tr_first_column" style="text-align: right">Prod.* ACT / SP - P50</td>
                        {% for data in forecast_PVSYST_table.forcast_PVSYSTP50 %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_first_column" style="text-align: right">Prod.* ACT /  SP - P90</td>
                        {% for data in forecast_PVSYST_table.forcast_PVSYSTP90 %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_first_column" style="text-align: right">Plant Simulation - P50</td>
                        {% for data in forecast_PVSYST_table.forcast_plan_PVSYSTP50 %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>

                    <tr>
                        <td class="tr_first_column" style="text-align: right">Plant Simulation - P90</td>
                        {% for data in forecast_PVSYST_table.forcast_plan_PVSYSTP90 %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>
                    <tr>
                        <td style="text-align: left" colspan="8">
                            <sup>*</sup> Production actual <br>
                            P90:      {{ anlage.LossesForecast }} %
                        </td>
                    </tr>

                    </tbody>

                </table>


            </td>

        </tr>


        <tr>
            <td style="text-align: left">
                {{ forecast_PVSYST|raw }}
            </td>
        </tr>

    </table>

{% endblock page %}