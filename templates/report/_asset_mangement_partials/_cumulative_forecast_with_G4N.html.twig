{% extends 'report/_asset_mangement_partials/_pageBase.html.twig' %}

{% block page %}
    <h3 style="color: {{ anlage.eigner.fontColor2 }};">Cumulative Forecast with g4n</h3>
    <span class="subheadline" style="color: {{ anlage.eigner.fontColor3 }};">Yearly expected vs. actuals</span>
    <table style="width: 100%">
        <tr>
            <td colspan="2" style="text-align: left">
                <table class="asset_report_table_operations_data" style="width: 95%!important;">
                    <thead>
                    <tr>
                        <th rowspan="2" style="text-align: right; ">Cumulative Forecast - {{ year }}</th>
                        {% for data in dataMonthArrayFullYear %}
                            <th style="text-align: center;width: 6.5%">{{ data }}</th>
                        {% endfor %}
                    </tr>
                    <tr>
                        {% for data in dataMonthArrayFullYear %}
                            <th style="text-align: center"><div style="width: 100%; height: 50%;">kWh</div></th>
                        {% endfor %}
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="tr_first_column" style="text-align: right">Prod.<sup>*</sup> ACT / g4n - P50</td>
                        {% for data in forecast_G4N_table.forcast_G4NP50 %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_first_column" style="text-align: right">Prod.<sup>*</sup> ACT /  g4n - P90</td>
                        {% for data in forecast_G4N_table.forcast_G4NP90 %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_first_column" style="text-align: right">g4n forecast - P50</td>
                        {% for data in forecast_G4N_table.forcast_plan_G4NP50 %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_first_column" style="text-align: right">g4n forecast - P90</td>
                        {% for data in forecast_G4N_table.forcast_plan_G4NP90 %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>
                    <tr>
                        <td style="text-align: left">
                            <sup>*</sup> Production actual <br>
                            P90:      {{ anlage.LossesForecast }} %
                        </td>
                    </tr>
                    </tbody>
                </table>


            </td>
        </tr>

        {# Security discount and the number #}
        <tr>
            <td style="text-align: left!important;">
                {{ forecast_G4N|raw }}
            </td>
        </tr>
    </table>
{% endblock page %}