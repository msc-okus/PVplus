                            {% endfor %}
                        </tr>
                        </tbody>
                    </table>

                </td>

            </tr>
            <tr>
                <td style="text-align: left!important;">
                    {{ forecast_G4N|raw }}
                </td>
            </tr>
        </table>
    </div>
    <div>
        <table style="width: 29.7cm;">
            <tr>
                <td style="border-bottom: solid 2px #91bc5b;width: 25.4cm;"></td>
