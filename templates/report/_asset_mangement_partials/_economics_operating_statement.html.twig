                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed; "><b>g4n plan proceeds - EXP</b></td>
                        {% set counter = 0 %}
                        {% set total = 0 %}
                        {% for data in income_per_month.gvn_plan_proceeds_EXP_minus_totals %}
                            {% if (counter > 6) %}
                                {% if (data == 0) %}
                                    <td class="tr_next_columns">-</td>
                                {% else %}
                                    <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                                {% endif %}
                            {% endif %}
                            {% set counter = counter+1 %}
                            {% set total = total + data %}
                        {% endfor %}
                        <td class="tr_next_columns">{{ total|number_format(0, ',', '.') }}</td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td style="text-align: center!important;">
                {{ operating_statement_chart|raw }}
            </td>
        </tr>
    </table>
{% endblock page %}