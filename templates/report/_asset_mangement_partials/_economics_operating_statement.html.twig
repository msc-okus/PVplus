{% extends 'report/_asset_mangement_partials/_pageBase.html.twig' %}

{% block page %}
    <h3 style="color: {{ anlage.eigner.fontColor2 }};">Economics</h3>
    <span class="subheadline">Operating statement</span>

    <table >
        <tr>
            <td colspan="2" style="text-align: left">
                <table class="asset_report_table_operations_data" style="width: 100%!important;">
                    <tbody>
                    <tr style="font-weight: bold;">
                        <td class="tr_next_columns" style="background-color: #ededed; width: 180px;">Operating statement [EUR]</td>
                        {% set counter = 0 %}
                        {% for data in dataMonthArrayFullYear %}
                            {% if (counter < 7) %}
                                <td class="tr_next_columns" style="background-color: #ededed; text-align: center!important;">{{ data }} {{ year }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed; "><b>Profit ACT</b></td>
                        {% set counter = 0 %}
                        {% set total = 0 %}
                        {% for data in income_per_month.revenues_act_minus_totals %}
                            {% if (counter < 7) %}
                                {% if (data == 0) %}
                                    <td class="tr_next_columns">-</td>
                                {% else %}
                                    <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                                {% endif %}
                              {% endif %}
                            {% set counter = counter+1 %}
                            {% set total = total + data %}
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed;"><b>PVSYST plan proceeds </b></td>
                        {% set counter = 0 %}
                        {% set total = 0 %}
                        {% for data in income_per_month.PVSYST_plan_proceeds_EXP_minus_totals %}
                            {% if (counter < 7) %}
                                {% if (data == 0) %}
                                    <td class="tr_next_columns">-</td>
                                {% else %}
                                    <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                                {% endif %}
                            {% endif %}
                            {% set counter = counter+1 %}
                            {% set total = total + data %}
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed; "><b>g4n plan proceeds - EXP</b></td>
                        {% set counter = 0 %}
                        {% set total = 0 %}
                        {% for data in income_per_month.gvn_plan_proceeds_EXP_minus_totals %}
                            {% if (counter < 7) %}
                                {% if (data == 0) %}
                                    <td class="tr_next_columns">-</td>
                                {% else %}
                                    <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                                {% endif %}
                            {% endif %}
                            {% set counter = counter+1 %}
                            {% set total = total + data %}
                        {% endfor %}
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: left">
                <table class="asset_report_table_operations_data" style="width: 100%!important;">
                    <tbody>
                    <tr style="font-weight: bold;">
                        <td class="tr_next_columns" style="background-color: #ededed; width: 180px;">Operating statement [EUR]</td>
                        {% set counter = 0 %}
                        {% for data in dataMonthArrayFullYear %}
                            {% if (counter > 6) %}
                                <td class="tr_next_columns" style="background-color: #ededed; text-align: center!important;">{{ data }} {{ year }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                        <td class="tr_next_columns" style="background-color: #ededed; font-weight: bold; text-align: center!important;">TOTAL</td>
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed; "><b>Profit ACT</b></td>
                        {% set counter = 0 %}
                        {% set total = 0 %}
                        {% for data in income_per_month.revenues_act_minus_totals %}
                            {% if (counter > 6) %}
                                {% if (data == 0) %}
                                    <td class="tr_next_columns">-</td>
                                {% else %}
                                    <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                                {% endif %}
                            {% endif %}
                            {% set counter = counter+1 %}
                            {% set total = total + data %}
                        {% endfor %}
                        <td class="tr_next_columns">{{ total|number_format(0, ',', '.') }}</td>
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed;"><b>PVSYST plan proceeds</b></td>
                        {% set counter = 0 %}
                        {% set total = 0 %}
                        {% for data in income_per_month.PVSYST_plan_proceeds_EXP_minus_totals %}
                            {% if (counter > 6) %}
                                {% if (data == 0) %}
                                    <td class="tr_next_columns">-</td>
                                {% else %}
                                    <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                                {% endif %}
                            {% endif %}
                            {% set counter = counter+1 %}
                            {% set total = total + data %}
                        {% endfor %}
