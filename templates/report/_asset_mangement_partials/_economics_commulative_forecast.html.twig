{% extends 'report/_asset_mangement_partials/_pageBase.html.twig' %}

{% block page %}
    <h3 style="color: {{ anlage.eigner.fontColor2 }};">Economics</h3>
    <span class="subheadline">Commulative forecast of the current proceeds with the forecast/plan values</span>

    <table >
        <tr>
            <td colspan="2" style="text-align: left">
                <table class="asset_report_table_operations_data" style="width: 100%!important;">
                    <tbody>
                    <tr style="font-weight: bold;">
                        <td class="tr_next_columns" style="background-color: #ededed; width: 300px!important;">Cumulated Forecast [EUR]</td>
                        {% set counter = 1 %}
                        {% for data in dataMonthArrayFullYear %}
                            {% if (counter < 7) %}
                                <td class="tr_next_columns" style="background-color: #ededed; text-align: center!important;">{{ data }} {{ year }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed; "><b>Actual plus Forecast g4n</b></td>
                        {% set counter = 1 %}
                        {% for data in economicsCumulatedForecast.revenues_ACT_and_Revenues_Plan_G4N %}
                            {% if (counter < 7) %}
                                <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>

                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed;"><b>Actual plus Plan Simulation</b></td>
                        {% set counter = 1 %}
                        {% for data in economicsCumulatedForecast.revenues_ACT_and_Revenues_Plan_PVSYT %}
                            {% if (counter < 7) %}
                                <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed;"><b>Expected g4n plus Forecast g4n</b></td>
                        {% set counter = 1 %}
                        {% for data in economicsCumulatedForecast.revenues_EXP_and_Revenues_Plan_Forecast %}
                            {% if (counter < 7) %}
                                <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed; "><b>Forecast g4n P50 - Proceeds</b></td>
                        {% set counter = 1 %}
                        {% for data in economicsCumulatedForecast.g4n_plan_proceeds_EXP_P50 %}
                            {% if (counter < 7) %}
                                <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed; "><b>Plan Simulation <sup>*</sup> P50 - Proceeds</b></td>
                        {% set counter = 1 %}
                        {% for data in economicsCumulatedForecast.PVSYST_plan_proceeds_P50 %}
                            {% if (counter < 7) %}
                                <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: left">
                <table class="asset_report_table_operations_data" style="width: 100%!important;">
                    <tbody>
                    <tr style="font-weight: bold;">
                        <td class="tr_next_columns" style="background-color: #ededed; width: 300px!important;">Cumulated Forecast [EUR]</td>
                        {% set counter = 1 %}
                        {% for data in dataMonthArrayFullYear %}
                            {% if (counter > 6) %}
                                <td class="tr_next_columns" style="background-color: #ededed; text-align: center!important;">{{ data }} {{ year }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    <tr>
