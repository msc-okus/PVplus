                                <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed; "><b>Actual plus Plan Simulation</b></td>
                        {% set counter = 1 %}
                        {% for data in economicsCumulatedForecast.revenues_ACT_and_Revenues_Plan_PVSYT %}
