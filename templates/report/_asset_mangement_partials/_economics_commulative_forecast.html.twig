                        {% set counter = 1 %}
                        {% for data in economicsCumulatedForecast.g4n_plan_proceeds_EXP_P50 %}
                            {% if (counter > 6) %}
                                <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    <tr>
                        <td class="tr_next_columns" style="background-color: #ededed;"><b>Plan Simulation P50 - Proceeds</b></td>
                        {% set counter = 1 %}
                        {% for data in economicsCumulatedForecast.PVSYST_plan_proceeds_P50 %}
                            {% if (counter > 6) %}
                                <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                            {% endif %}
                            {% set counter = counter+1 %}
                        {% endfor %}
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td style="text-align: center!important;">
                {{ economicsCumulatedForecastChart|raw }}
            </td>
        </tr>
    </table>
{% endblock page %}