{% extends 'report/_asset_mangement_partials/_pageBase.html.twig' %}

{% block page %}
    <h3 style="color: {{ anlage.eigner.fontColor2 }};">Cumulative Losses</h3>
    <table >
        <tr>
            <td  style="text-align: left">
                <table class="asset_report_table_operations_data " >
                    <thead>
                    <tr>
                        <th style="text-align: right;width:230px" rowspan="2">Losses - {{ year }}</th>
                        {% for data in monthArray %}
                            <th style="text-align: center;width: 6.5%"><div style="width: 100%">{{ data }}</div></th>
                        {% endfor %}
                    </tr>
                    <tr>
                        {% for data in monthArray %}
                            <th style="text-align: center"><div style="width: 100%">[kWh]</div></th>
                        {% endfor %}
                    </tr>
                    </thead>
                    <tbody>


                    <tr>
                        <td class="tr_first_column" style="text-align: right">Diff. ACT <sup>*</sup> to EXP g4n<sup>**</sup></td>
                        {% for data in losses_t1.difference_Egrid_to_Expected_G4n %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>


                    <tr>
                        <td class="tr_first_column" style="text-align: right">Diff. ACT to forecast</td>
                        {% for data in losses_t1.difference_act_forecast %}
                            <td class="tr_next_columns">{{ data|number_format(0, ',', '.') }}</td>
                        {% endfor %}
                    </tr>

                    </tbody>
                    <tr>
                        <td  style="text-align: left" colspan="6">
                            <sup>*</sup>ACT; Prod actual. <br>
                            <sup>**</sup>Expected g4n production. <br>
                        </td>
                    </tr>
                </table>
                <table style="width:100%!important;">
                    <tr>
                        <td style="text-align: left">{{ losses_year|raw }}</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock page %}