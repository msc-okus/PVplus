                <!--<th>AA</th>-->
                <!--<th>AB</th>-->
                <!--<th>AC</th>-->
            </tr>
            <tr>
                <th style="min-width: 80px">Month</th>
                <th>Days</th>
                <th>Irradiation [kWh/m²]</th>
                <th>Yield [kWh]</th>
                <th>spezif. Yield [kWh/kWp]</th>
                <th>PR [%]</th>
                <th>PR<sub>Guar_M</sub> [%]</th>
                <th>Theoretical Energy design <br>
                    ohne FT Korrektur</th>
