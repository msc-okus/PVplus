{% extends 'base.html.twig' %}
    {% block styles %}
        {{ parent() }}
    {% endblock %}

    {% block body %}
        <div class="grid-x">
            <div class="cell">
                <h1>Upload Files</h1>
            </div>
        </div>


        {%  if isupload == 'yes' %}
            Last Uploadet:<br>
            <img class="article-img" src="{{ asset(imageuploadet.uploadpath) }}"><br>

        {% else %}
            {{ form_start(fileUploadForm) }}
            <div class="cell medium-2">
                {{ form_row(fileUploadForm.imageFile) }}
            </div>
            {{ form_end(fileUploadForm) }}
        {% set unitcounter = 0 %}
        {% for data in fileseindb %}
            <img class="article-img" src="{{ asset(fileseindb[unitcounter].uploadpath)|imagine_filter('squared_thumbnail_small') }}"><br>
            {% set unitcounter = unitcounter+1 %}
        {% endfor %}
        {% endif %}
    {% endblock %}



{% block stylesheets %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.css" integrity="sha256-e47xOkXs1JXFbjjpoRr1/LhVcqSzRmGmPqsrUQeVs+g=" crossorigin="anonymous" />
{% endblock %}

