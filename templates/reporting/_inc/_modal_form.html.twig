<div class="reveal text-left {{ class|default('') }}" id="modal{{ modalId }}"
     data-multiple-opened="true"
     data-v-offset = "{{ dataVOffset|default('auto') }}"
     data-modal-form-target="modalPdf"
     data-reveal
     data-close-on-click = "false"
     data-append-to="div#modal-form{{ modalId }}"
>
    <h1>{{ modalTitel }}</h1>
    <div class="grid-x grid-padding-y" data-action="async:submitted->modal-form#reload">
        <div class="cell modal-body"
             data-modal-form-target="modalBodyPdf"
             data-action="submit->modal-form#submitForm"
        >
            {{ modalContent|default('Loading...') }}
        </div>
    </div>

    <div class="grid-x">
        <div class="cell text-right">
            <button
                    class="close-button"
                    type="button"
                    data-action="modal-form#closeModal">
                <span aria-hidden="true">&times;</span>
            </button>
            <label>&nbsp;</label>


            <button type="button" class="button secondary small" data-action="modal-form#closeModal">Cancel</button>
            {#  <button type="button" class="button small" data-action="modal-form#createReport">Create</button> #}
        </div>
    </div>

</div>