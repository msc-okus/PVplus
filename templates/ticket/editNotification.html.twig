{% block styles %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

{% block title %}
{% endblock %}

{% block body %}
<div class="off-canvas-content" data-off-canvas-content>
    <main class="grid-container fluid" style="padding-top: 1rem">
        <div class="grid-x grid-margin-x grid-padding-x">
            <div class="cell small-12">
                    <div class="grid-x" data-action="ticket-split:async:submitted->ticket-edit#reload" >
                        <div class="cell">
                            <div class="grid-x grid-margin-y" id="ticket-edit">
                                <div class="grid-x grid-padding-x">
                                    {% if answered %}
                                    Your reply has been submitted, thanks.
                                    {% else %}
                                        {% if (ticket != null) %}
                                            {{ form_start(notificationEditForm) }}
                                            <div class="grid-x grid-padding-x">
                                                <br>Information about the problem:
                                                <br>
                                                <br>Affected inverters: {{ ticket.inverterName }}
                                                <br>
                                                <br> Error type: {% set errcat %}ticket.error.category.{{ ticket.alertType }}{% endset %}{{ errcat|trans }}
                                                <br>
                                            </div>
                                            <div class="grid-x grid-padding-x">
                                                <div class="cell small-12 medium-6">
                                                    {{ form_widget(notificationEditForm.answers) }}
                                                </div>
                                                <div class="cell small-12 medium-6">
                                                    {{ form_widget(notificationEditForm.answer) }}
                                                </div>
                                            </div>
                                            {{ form_end(notificationEditForm) }}
                                        </div>
                                        {% else %}
                                            Expired Notification
                                        {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
