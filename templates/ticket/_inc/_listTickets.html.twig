<table class="table sortable">
    <thead>
    <tr>
        <th>Ticket ID</th>
        <th {% if pagination.isSorted('a.anlName') %} class="sorted"{% endif %}>
            {{ knp_pagination_sortable(pagination, 'Plant', ['a.anlName']) }}
        </th>

        <th class="text-center">Status</th>
        <th class="text-center">Priority</th>
        <th {% if pagination.isSorted('ticket.editor') %} class="sorted"{% endif %}>
            {{ knp_pagination_sortable(pagination, 'Editor', ['ticket.editor']) }}</th>
        <th {% if pagination.isSorted('ticket.begin') %} class="sorted"{% endif %}>
            {{ knp_pagination_sortable(pagination, 'Begin', ['ticket.begin']) }}</th>
        <th {% if pagination.isSorted('ticket.end') %} class="sorted"{% endif %}>
            {{ knp_pagination_sortable(pagination, 'End', ['ticket.end']) }}</th>
        {% if (is_granted('ROLE_DEV')) %}
            <th>Last Update</th>
        {% endif %}
        <th>Error Categorie{% if is_granted('ROLE_G4N') %} alertType {% endif %}</th>
        <th>Error Type</th>
        <th>Inverter</th>
        <th></th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    {% for ticket in pagination %}
        <tr>
            <td>{{ ticket.id }}</td>
            <td>{{ ticket.anlage.anlName }} {% if is_granted('ROLE_G4N') %} ({{ ticket.anlage.anlId }}) {% endif %}</td>
            <td class="text-center">
                {% set status %}ticket.status.{{ ticket.status }}{% endset %}
                <span class="label ticket-status-{{ ticket.status }}">{{ status|trans }}</span>
            </td>
            <td class="text-center">
                {% set priority %}ticket.priority.{{ ticket.priority }}{% endset %}
                <span class="label ticket-priority-{{ ticket.priority }}">{{ priority|trans }}</span>
            </td>
            <td>{{ ticket.editor }}</td>
            <td>{{ ticket.begin|date("d.m. H:i")}}</td>
            <td>{{ ticket.end|date("d.m. H:i") }}</td>
            {% if (is_granted('ROLE_DEV')) %}
                <td>{{ ticket.updatedAt|date("d.m. H:i")  }}</td>
            {% endif %}
            <td>
                {% set errcat %}ticket.error.category.{{ ticket.alertType }}{% endset %}
                {{ errcat|trans }} | {{ ticket.alertType }}
            </td>
            <td>
                {% set errtyp %}ticket.error.type.{{ ticket.errorType }}{% endset %}
                {{ errtyp|trans }} | {{ ticket.errorType }}
            </td>
            <td>{{ ticket.inverter }}</td>
            <td></td>
            <td class="text-right"><a href="{{ path('app_ticket_edit', { id: ticket.id }) }}" class="hollow button tiny action-icon shadow"><span class="fa fa-edit"></span></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(pagination) }}