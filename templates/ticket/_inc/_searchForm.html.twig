
<form method="get">
    <div class="grid-x grid-margin-x align-middle">
        <div class="cell medium-1"  style="margin-top:-17px!important;">
            <input type="text" name="id" class="input-group-field" value="{{ id }}" placeholder="Ticket Id">
        </div>
        <div class="cell medium-2" style="margin-top:-17px!important;">
            {# <input type="text" name="anlage" class="input-group-field js-autocomplete-plant" value="{{ anlage }}" placeholder="Plant"> #}
            <select name="anlage" class="no-margin">
                <option value="" disabled selected hidden>Please choose a Plant</option>
                <option value="" {% if filter.anlagen.value == '' %} selected {% endif %} >Select a Plant</option>
                {% for anlage in filter.anlagen.array %}
                    <option value="{{ anlage.anlId }}"{% if app.request.query.get('anlage-id') == anlage.anlId %} selected {% endif %}>{{ anlage.anlId }} - {{ anlage.anlName }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="cell medium-1">
            <select name="status" >
                <option value="00"> {% trans %}ticket.status.name{% endtrans %} </option>
                {% for key, value in filter.status.array %}
                    <option value="{{ value }}" {% if filter.status.value == value %} selected {% endif %}>{{ key }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="cell medium-1">
            <select name="prio" >
                <option value="00"> {% trans %}ticket.priority.name{% endtrans %} </option>
                {% for key, value in filter.priority.array %}
                    <option value="{{ value }}" {% if filter.priority.value == value %} selected {% endif %}>{{ key }}</option>
                {% endfor %}
            </select>
        </div>
        <div  class="cell medium-2"  style="margin-top:-17px!important;">
            <input type="text" name="editor" class="input-group-field js-autocomplete-user" value="{{ user }}" placeholder="Editor">
        </div>
        <div class="cell medium-1">
            <select name="category" >{# category = alertType (bsp: datagap, inverter power, etc.) #}
                {{ filter.category.value }}
                <option value="00">{% trans %}ticket.error.category.name{% endtrans %}</option>
                {% for key, value in filter.category.array %}
                    <option value="{{ value }}" {% if filter.category.value == value %} selected {% endif %}>{{ key }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="cell medium-1">
            <select name="type" > {# type = errorType (Bsp:  SOR, EFOR, OMC) #}
                <option value="00">{% trans %}ticket.error.type.name{% endtrans %}</option>
                {% for key, value in filter.type.array %}
                    <option value="{{ value }}" {% if filter.type.value == value %} selected {% endif %}>{{ key }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="cell medium-1"  style="margin-top:-17px!important;">
            <input type="text" name="inverter" class="input-group-field" value="{{ inverter }}" placeholder="Inverter">
        </div>
        <div class="cell medium-1"  style="margin-top:-17px!important;">
            <label> Proof by TAM
                <input type="checkbox" name="prooftam" class="input-group-field" value="1">
            </label>
        </div>

        <div class="cell medium-1">
            <div class="input-group-button" style="height:35px !important; width:35px !important; padding:0; margin-top:-15px;">
                <button type="submit" name="search" class="button" value="yes"
                        data-action="ticket-list#search"
                ><span class="fa fa-search"></span></button>
            </div>
        </div>
        <div class="cell medium-1" style="visibility: hidden">
            <input type="text" name="sort" class="input-group-field" value="" data-ticket-list-target="sort">
        </div>
        <div class="cell medium-1 hidden" style="visibility: hidden">
            <input type="text" name="direction" class="input-group-field" value="" data-ticket-list-target="direction">
        </div>

    </div>
</form>