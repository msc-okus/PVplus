<div class="cell medium-9" data-media-list-target="searchBar">
    <form method="get">
        <label><b>Filter / Search by:</b></label>
        <div class="grid-x grid-margin-x align-top" style="margin-top: 20px; margin-bottom: 20px">
            <div class="cell medium-2"  style="margin-top:-17px!important;">
                <input type="text" name="name" class="input-group-field"  title="Name" >
            </div>
            <div class="cell medium-2"  style="margin-top:-17px!important;">
                <select name="type">
                    <option value=""> Any </option>
                    <option value="pdf">pdf</option>
                    <option value="image">image</option>
                    <option value="excel">excel</option>
                    <option value="other">other</option>
                </select>

            </div>
            <div class="cell medium-2"  style="margin-top:-17px!important;">
                <button title="Search" type="submit" name="search" class="button action-icon tiny hollow shadow" value="yes" data-action="media-list#search"><span class="fa fa-search"></span></button>
            </div>
        </div>
    </form>
</div>