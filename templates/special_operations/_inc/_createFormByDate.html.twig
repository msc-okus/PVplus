<form method="post">
    <div class="grid-x grid-margin-x align-middle">
        <div class="cell medium-2">
            <label for="anlage-id">Plant</label>
            <select id="anlage-id" name="anlage-id">
                <option value="" disabled selected hidden>Please choose a Plant</option>
                <option value=""   {% if status == ''   %}   selected {% endif %} > Select a Plant</option>
                {% for anlage in anlagen %}
                    <option value="{{ anlage.anlId }}"{% if app.request.query.get('anlage-id') == anlage.anlId or status == anlage.anlId %} selected {% endif %}>{{ anlage.anlName }} ({{ anlage.anlId }})</option>
                {% endfor %}
            </select>
        </div>
        {% if is_granted('ROLE_G4N') %}
            <div class="cell medium-2">
                <label for="start-day">Start Day</label>
                <select id="start-day" name="start-day">
                    <option value="" disabled selected hidden>Please choose a Start Day</option>
                    {% for start in 1..31 %}
                        <option value="{{ start }}" {% if app.request.request.get('start-day') == start %} selected {% endif %}>{{ start }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="cell medium-2">
                <label for="end-day">End Day</label>
                <select id="end-day" name="end-day">
                    <option value="" disabled selected hidden>Please choose a End Day</option>
                    {% for end in 1..31 %}
                        <option value="{{ end }}" {% if app.request.request.get('end-day') == end %} selected {% endif %}>{{ end }}</option>
                    {% endfor %}
                </select>
            </div>
        {% endif %}
        <div class="cell medium-2">
            <label for="month">Month</label>
            <select id="month" name="month">
                <option value="" disabled selected hidden>Please choose a Month</option>
                <option value="1" {% if app.request.request.get('month') == 1 %} selected {% endif %}>01</option>
                <option value="2" {% if app.request.request.get('month') == 2 %} selected {% endif %}>02</option>
                <option value="3" {% if app.request.request.get('month') == 3 %} selected {% endif %}>03</option>
                <option value="4" {% if app.request.request.get('month') == 4 %} selected {% endif %}>04</option>
                <option value="5" {% if app.request.request.get('month') == 5 %} selected {% endif %}>05</option>
                <option value="6" {% if app.request.request.get('month') == 6 %} selected {% endif %}>06</option>
                <option value="7" {% if app.request.request.get('month') == 7 %} selected {% endif %}>07</option>
                <option value="8" {% if app.request.request.get('month') == 8 %} selected {% endif %}>08</option>
                <option value="9" {% if app.request.request.get('month') == 9 %} selected {% endif %}>09</option>
                <option value="10" {% if app.request.request.get('month') == 10 %} selected {% endif %}>10</option>
                <option value="11" {% if app.request.request.get('month') == 11 %} selected {% endif %}>11</option>
                <option value="12" {% if app.request.request.get('month') == 12 %} selected {% endif %}>12</option>
            </select>
        </div>
        <div class="cell medium-2">
            <label for="year">Year</label>
            <select id="year" name="year">
                <option value="" disabled selected hidden>Please choose a Year</option>
                <option value="2020"{% if app.request.request.get('year') == 2020 %} selected {% endif %}>2020</option>
                <option value="2021"{% if app.request.request.get('year') == 2021 %} selected {% endif %}>2021</option>
                <option value="2022"{% if app.request.request.get('year') == 2022 %} selected {% endif %}>2022</option>
                <option value="2023"{% if app.request.request.get('year') == 2023 %} selected {% endif %}>2023</option>
                <option value="2024"{% if app.request.request.get('year') == 2024 %} selected {% endif %}>2024</option>
            </select>
        </div>

        <div class="cell medium-2">
            <button name="new-report" class="button" value="yes"
            >Start</button>
        </div>

    </div>
</form>