{# AC Power Diagramme #}
{% macro acActGroup(form, aktAnlage) %}
    <option value="ac_act_group" {% if form.selectedChart == 'ac_act_group' %}selected{% endif %}>
        {% if aktAnlage.configType == 1 %}
            AC - Actual & Expected, Groups Overview
        {% elseif aktAnlage.configType == 2 %}
            AC - Actual & Expected, Inverters
        {% elseif aktAnlage.configType == 3 %}
            AC - Actual & Expected, Inverters
        {% else %}
            AC - Actual & Expected, Groups
        {% endif %}
    </option>
{% endmacro %}

{% macro acActOverview(form, aktAnlage) %}
    {% if is_granted('ROLE_ADMIN') %}
        {% if aktAnlage.configType == 3 %}
            <option value="ac_act_group" {% if form.selectedChart == 'ac_act_overview' %}selected{% endif %}>
                AC - Actual & Expected, Overview
            </option>
        {% endif %}
    {% endif %}
{% endmacro %}

