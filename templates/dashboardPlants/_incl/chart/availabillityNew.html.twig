{% import _self as macros %}

{% macro availabilityTable(availability, second) %}
    {% set pa = 0 %}
    {% set case0 = 0 %}
    {% set case1 = 0 %}
    {% set case2 = 0 %}
    {% set case3 = 0 %}
    {% set case4 = 0 %}
    {% set case5 = 0 %}
    {% set case6 = 0 %}
    <div class="status-log" style="margin: 0 25px 0 10px;">
        <table id="statusTable" style="width: 100%;">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Inverter</th>
                    <th></th>
                    <th>Case 0</th>
                    <th>Case 1</th>
                    <th>Case 2</th>
                    <th>Case 3</th>
                    <th>Case 4</th>
                    <th>Case 5</th>
                    <th>Case 6</th>
                    <th>Control</th>
                    <th>Avail. cases [%]</th>
                    <th>Rel. avail. plant [%]</th>
                </tr>
            </thead>
            <tbody>
            {% for stati in availability %}
                <tr>
                    <td>{{ stati.stamp|date("Y-m-d") }} </td>
                    <td>{{ stati.inverter }}</td>
                    <td>
                        <span class="topline">PA.0</span>
                        <span class="topline">PA.1</span>
                        <span class="topline">PA.2</span>
                        <span class="topline">PA.3</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.case00 }} / {{ stati.case00 / 4 }}</span>
                        <span class="topline">{{ stati.case01 }} / {{ stati.case01 / 4 }}</span>
                        <span class="topline">{{ stati.case02 }} / {{ stati.case02 / 4 }}</span>
                        <span class="topline">{{ stati.case03 }} / {{ stati.case03 / 4 }}</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.case10 }} / {{ stati.case10 / 4 }}</span>
                        <span class="topline">{{ stati.case11 }} / {{ stati.case11 / 4 }}</span>
                        <span class="topline">{{ stati.case12 }} / {{ stati.case12 / 4 }}</span>
                        <span class="topline">{{ stati.case13 }} / {{ stati.case13 / 4 }}</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.case20 }} / {{ stati.case20 / 4 }}</span>
                        <span class="topline">{{ stati.case21 }} / {{ stati.case21 / 4 }}</span>
                        <span class="topline">{{ stati.case22 }} / {{ stati.case22 / 4 }}</span>
                        <span class="topline">{{ stati.case23 }} / {{ stati.case23 / 4 }}</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.case30 }} / {{ stati.case30 / 4 }}</span>
                        <span class="topline">{{ stati.case31 }} / {{ stati.case31 / 4 }}</span>
                        <span class="topline">{{ stati.case32 }} / {{ stati.case32 / 4 }}</span>
                        <span class="topline">{{ stati.case33 }} / {{ stati.case33 / 4 }}</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.case40 }} / {{ stati.case40 / 4 }}</span>
                        <span class="topline">{{ stati.case41 }} / {{ stati.case41 / 4 }}</span>
                        <span class="topline">{{ stati.case42 }} / {{ stati.case42 / 4 }}</span>
                        <span class="topline">{{ stati.case43 }} / {{ stati.case43 / 4 }}</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.case50 }} / {{ stati.case50 / 4 }}</span>
                        <span class="topline">{{ stati.case51 }} / {{ stati.case51 / 4 }}</span>
                        <span class="topline">{{ stati.case52 }} / {{ stati.case52 / 4 }}</span>
                        <span class="topline">{{ stati.case53 }} / {{ stati.case53 / 4 }}</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.case60 }} / {{ stati.case60 / 4 }}</span>
                        <span class="topline">{{ stati.case61 }} / {{ stati.case61 / 4 }}</span>
                        <span class="topline">{{ stati.case62 }} / {{ stati.case62 / 4 }}</span>
                        <span class="topline">{{ stati.case63 }} / {{ stati.case63 / 4 }}</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.control0}} / {{ stati.control0 / 4}}</span>
                        <span class="topline">{{ stati.control1 }} / {{ stati.control1 / 4}}</span>
                        <span class="topline">{{ stati.control2 }} / {{ stati.control2 / 4}}</span>
                        <span class="topline">{{ stati.control3 }} / {{ stati.control3 / 4}}</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.invAPart10|number_format(2, ',', '.') }}</span>
                        <span class="topline">{{ stati.invAPart11|number_format(2, ',', '.') }}</span>
                        <span class="topline">{{ stati.invAPart12|number_format(2, ',', '.') }}</span>
                        <span class="topline">{{ stati.invAPart13|number_format(2, ',', '.') }}</span>
                    </td>
                    <td>
                        <span class="topline">{{ stati.invA0|number_format(4, ',', '.') }}</span>
                        <span class="topline">{{ stati.invA1|number_format(4, ',', '.') }}</span>
                        <span class="topline">{{ stati.invA2|number_format(4, ',', '.') }}</span>
                        <span class="topline">{{ stati.invA3|number_format(4, ',', '.') }}</span>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endmacro availabilityTable %}



<div class="grid-x">
    <div class="cell medium-9">
        {{ macros.availabilityTable(content.availability, aktAnlage.showAvailabilitySecond) }}
    </div>
    <div class="cell medium-3">
        <div class="callout secondary text-left" >
            <h4><b>Explanation</b></h4>
            <dl>
                <dt>Case 0</dt>
                <dd>data gap<br>
                    <small></small></dd>

                <dt>Case 1</dt>
                <dd>irradiation below limit value<br>
                    <small>G [W/qm] > {{ aktAnlage.threshold1PA }} && G [W/qm] <= {{ aktAnlage.threshold2PA }}</small></dd>

                <dt>Case 2 (t<sub>i</sub>)</dt>
                <dd>inverter available under operating conditions<br>
                    <small>G [W/qm] > {{ aktAnlage.threshold2PA }}</small></dd>

                <dt>Case 3</dt>
                <dd>inverter not available under operating conditions<br>
                    <small>G [W/qm] > {{ aktAnlage.threshold2PA }} && Pac [kWh] <= 0</small></dd>

                <dt>Case 4</dt>
                <dd>inverter not available because of curtailment<br>
                    <small>G [W/qm] > {{ aktAnlage.threshold2PA }} && Pac [kWh] > 0 && CosPhi = 0</small></dd>

                <dt>Case 5 (t<sub>iFM</sub>)</dt>
                <dd>inverter not available because of maintenance<br>
                    <small></small></dd>

                <dt>Case 6</dt>
                <dd>data gap are defined to unavialability<br>
                    <small></small></dd>

                <dt>Control (t<sub>i,theo</sub>)</dt>
                <dd>control field case 1 + case 2 + case 5 + case 6<br>
                    <small>G [W/qm] > 0</small></dd>

                <dt>Availability cases</dt>
                <dd> the individual availability of an inverter or group. Full availability: 100%<br>
                    <!--<small>G [W/qm] > 0</small>--></dd>

                <dt>Relative availability in plant</dt>
                <dd> the relative availability of and inverter or group within the PV plant. Full availability is equal to the ratio of inverter power to total plant power. Total plant availability: the sum of all relative inverter availabilities.  <br>
                    <!--<small>G [W/qm] > 0</small>--></dd>

            </dl>
        </div>
    </div>
</div>

