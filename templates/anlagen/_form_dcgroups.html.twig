                                                          <tr>
                                                            <th><small>Month</small></th>
                                                            <th><small>Irr Upper</small></th>
                                                            <th><small>Irr Lower</small></th>
                                                            <th><small>Shadow Loss</small></th>
                                                            <th></th>
                                                        </tr>

                                                        </thead>
                                                        <tbody>
                                                        {% for month in group.months %}
                                                            <tr class="js-month-item">
