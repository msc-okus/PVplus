{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}Tools
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block body %}
    <div class="grid-x">
        <div class="cell">
            <h1 id="thechange">eGrid Import (Beta)</h1>
        </div>
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'no'}}) }}

    <div class="grid-x grid-margin-x">
        <div class="cell medium-2">
            {{ form_row(form.anlage) }}
        </div>
        <div class="cell medium-2">
            {{ form_row(form.file) }}
        </div>
    </div>

    <div class="grid-x grid-margin-x" style="min-height: 50vh;">
        <div class="cell medium-12">
            <div class="callout" >
                {{ output|raw }}
            </div>
            <div class="" style="max-height: 50vh; overflow-y: scroll;"
                    {{ stimulus_controller('tools-message', {
                        url: path('app_log_messages_list'),
                        refreshIntervale: 5000,
                    }) }}>
            </div>
        </div>
    </div>

    <div class="grid-x grid-margin-x grid-margin-y">
        <div class="cell medium-4">
            {{ form_widget(form.calc) }}
            {{ form_widget(form.close) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
