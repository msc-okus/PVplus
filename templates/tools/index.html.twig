{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}Tools
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block body %}
    <div class="grid-x">
        <div class="cell">
            <h1 id="thechange"></h1>
        </div>
    </div>

    {{ form_start(toolsForm, {'attr': {'novalidate': 'no'}}) }}

        <div class="grid-x grid-margin-x">
            <div class="cell medium-2">
                {{ form_row(toolsForm.anlage) }}
            </div>
            <div class="cell medium-2">
                {{ form_row(toolsForm.startDate) }}
            </div>
            <div class="cell medium-2">
                {{ form_row(toolsForm.endDate) }}
            </div>
            <div class="cell medium-2">
                {{ form_row(toolsForm.function) }}
            </div>
        </div>

        <div class="grid-x grid-margin-x" style="min-height: 50vh;">
            <div class="cell medium-12">
                <div class="callout" >
                    {{ output|raw }}
                </div>
                <div class="" style="min-height: 50vh; max-height: 50vh; overflow: scroll;"
                        {{ stimulus_controller('tools-message', {
                        url: path('app_log_messages_list'),
                        refreshIntervale: 5000,
                        }) }}>
                </div>
            </div>
        </div>

    <div class="grid-x grid-margin-x grid-padding-x text-left">
        <div class="cell medium-4">
            {{ form_widget(toolsForm.calc) }}
            {{ form_widget(toolsForm.close) }}
        </div>
    </div>
    {{ form_end(toolsForm) }}
{% endblock %}