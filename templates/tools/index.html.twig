{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}Tools
{% endblock %}

{% block body %}
    <div class="grid-x">
        <div class="cell">
            <h1>Tools</h1>
        </div>
    </div>
    {{ form_start(toolsForm, {'attr': {'novalidate': 'no'}}) }}
        <div class="grid-x grid-margin-x grid-padding-x">
            <div class="cell medium-3">
                {{ form_row(toolsForm.anlage) }}
            </div>
            <div class="cell medium-3">
                {{ form_row(toolsForm.startDate) }}
            </div>
            <div class="cell medium-3">
                {{ form_row(toolsForm.endDate) }}
            </div>
            <div class="cell medium-3">
                {{ form_row(toolsForm.function) }}
            </div>
        </div>
        <div class="grid-x grid-margin-x grid-padding-x text-right">
            <div class="cell">
                {{ form_widget(toolsForm.close) }}
                {{ form_widget(toolsForm.calc) }}
            </div>
        </div>
        <div class="grid-x">
            <div class="cell">
                <div class="callout" style="min-height: 50vh;">
                    {{ output|raw }}
                </div>
            </div>
        </div>
    {{ form_end(toolsForm) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}